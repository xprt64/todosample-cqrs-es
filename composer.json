{
  "name": "xprt64/todo-cqrs-es",
  "description": "Todo list example application using cqrs and event sourcing",
  "type": "project",
  "license": "BSD-3-Clause",
  "require": {
    "php": "^5.6 || ^7.0",
    "roave/security-advisories": "dev-master",
    "zendframework/zend-expressive": "^1.0",
    "zendframework/zend-expressive-helpers": "^2.0",
    "zendframework/zend-stdlib": "^2.7 || ^3.0",
    "zendframework/zend-expressive-aurarouter": "^1.0",
    "zendframework/zend-servicemanager": "^2.7.3 || ^3.0",
    "zendframework/zend-expressive-zendviewrenderer": "^1.0",
    "xprt64/cqrs-es": "2.0.0",
    "xprt64/cqrs-eventstore-mongodb": "2.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",
    "filp/whoops": "^1.1 || ^2.0"
  },
  "autoload": {
    "psr-4": {
      "Domain\\": "src/Domain/",
      "UI\\": "src/UI/",
      "Bin\\": "src/Bin/",
      "Infrastructure\\": "src/Infrastructure/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AppTest\\": "test/AppTest/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  }
}
